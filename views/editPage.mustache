{{> layout }}

{{#header}}
  <h1 class="title">Edit Page</h1>
{{/header}}

<form action="/pages/edit/{{url}}" method="POST">
  <div class="field">
    <label class="label">URL</label>
    <div class="control">
      <input class="input" type="text" name="url" value="{{url}}" readonly />
    </div>
  </div>
  <div class="field">
    <label class="label">Name</label>
    <div class="control">
      <input class="input" type="text" name="name" value="{{name}}" required />
    </div>
  </div>
  <div class="field">
    <label class="label">Release Date</label>
    <div class="control">
      <input class="input" type="text" name="releaseDate" value="{{releaseDate}}" required />
    </div>
  </div>
  <div class="field">
    <label class="label">Genre</label>
    <div class="control">
      <input class="input" type="text" name="genre" value="{{genre}}" required />
    </div>
  </div>
  <div class="field">
    <label class="label">Price</label>
    <div class="control">
      <input class="input" type="text" name="price" value="{{price}}" required />
    </div>
  </div>
  <div class="field">
    <div class="control">
      <button class="button is-primary" type="submit">Update Page</button>
    </div>
  </div>
</form>

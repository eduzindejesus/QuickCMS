{{> layout }}

<section class="section">
  <div class="container">
    <div class="box">
      <h1 class="title">{{ name }}</h1>
      <p class="subtitle">
        <strong>Data de lançamento:</strong> {{ releaseDate }}
      </p>
      <p class="subtitle"><strong>Gênero:</strong> {{ genre }}</p>
      <p class="subtitle"><strong>Preço R$:</strong> {{ price }}</p>
      {{#image}}
      <img
        src="{{ image }}"
        alt="Page Image"
        style="max-width: 100%; height: auto"
      />
      {{/image}}

      {{#isLoggedIn}}
      <div class="buttons">
        <a class="button is-link" href="/pages/edit/{{ url }}">Edit</a>
        <form
          action="/pages/delete/{{ url }}"
          method="POST"
          style="display: inline"
          onsubmit="return confirm('Are you sure you want to delete this page?');"
        >
          <button class="button is-danger" type="submit">Delete</button>
        </form>
      </div>
      {{/isLoggedIn}}
    </div>
  </div>
</section>

<style>
  .title {
    color: #6a5acd; /* Tom de roxo pastel */
  }
  .subtitle {
    color: #4a4a4a; /* Cor de texto escuro */
  }
  .box {
    background-color: #ffffff; /* Cor de fundo branco */
    border: 1px solid #ddd; /* Borda suave */
    border-radius: 8px; /* Bordas arredondadas */
    padding: 1.5rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra leve */
  }
  .content {
    margin-top: 1.5rem;
  }
  .buttons {
    margin-top: 1.5rem;
  }
</style>
